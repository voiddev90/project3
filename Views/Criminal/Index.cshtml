@{
    ViewData["title"] = "criminaliteit in Rotterdam";
}


<h3>Criminaliteit in Rotterdam</h3>
   <p>Hier kunt u de gegevens vinden over de criminaliteit binnen Rotterdam. U ziet een map met de districten en eronder de grafiek. Onder de grafiek kunt u filteren naar uw wens.</p>

   <canvas id="chart" width="400" height="200"></canvas>
   <select id="selectYear" onchange="getNewData();">
       <option value="">Alle jaren</option>
       <option value="2011">2011</option>
       <option value="2012">2012</option>
   </select>

   <select id="selectType" onchange="getNewData();">
       <option value="GetStreetCrimeData">Straatroof</option>
       <option value="GetBicycleCrimesData">Fietsendiefstal</option>
   </select>
   @await Html.PartialAsync("_map")

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="~/js/criminal.js"></script>